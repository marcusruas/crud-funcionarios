@using Funcionarios.Models;
@using System.Linq;

@model List<FuncionarioSimplificado>

@{
    ViewBag.Title = "Novo funcionário";
}

<div id="tituloPagina" class="row">
    <div id="title" class="col-md-12">
        <h4>@ViewBag.Header</h4>
    </div>
</div>

<form>
    <div class="form-group row">
        <label for="nome" class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-md-10">
            <input type="text" style="width: 100%" class="form-control-plaintext" id="nome" placeholder="Digite o nome do funcionário">
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-md-10">
            <input type="email" style="width: 100%" class="form-control-plaintext" id="email" placeholder="Digite o e-mail do funcionário">
        </div>
    </div>
    <div class="form-group row">
        <label for="dataNascimento" class="col-sm-2 col-form-label">Data de Nascimento:</label>
        <div class="col-md-10">
            <input type="date" style="width: 100%" class="form-control-plaintext" id="dataNascimento">
        </div>
    </div>
    <div class="form-group row">
        <label for="salario" class="col-sm-2 col-form-label">Salário: R$</label>
        <div class="col-md-10">
            <input type="number" style="width: 100%" class="form-control-plaintext" id="salario">
        </div>
    </div>
    <div class="form-group row">
        <label for="estado" class="col-sm-2 col-form-label">Estado (UF):</label>
        <div class="col-md-10">
            <select class="form-select" style="width: 100%">
                <option value="valor1" selected>-- Selecione --</option>
                <option value="valor1">Valor 1</option>
                <option value="valor2">Valor 2</option>
                <option value="valor3">Valor 3</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary" style="margin-left: 15px">Salvar Funcionário</button>
    </div>
</form>